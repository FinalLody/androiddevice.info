<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="22dp"
    android:orientation="vertical" android:background="@android:color/black">

    <TextView android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/device_name_dialog_title"
        android:layout_marginBottom="18dp"
        android:textColor="@android:color/white"

        />

    <!-- Setting android:textCursorDrawable="@null makes the cursor the same color as the text color-->
    <EditText android:id="@+id/editable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. Nexus 5"
        android:textColor="@android:color/white"
        android:background="@drawable/input_box"
        android:singleLine="true"
        android:inputType="textCapWords"
        android:textCursorDrawable="@null"
        android:textSize="18sp"/>

</LinearLayout>
